<div class="row">
	{{#if showScore}}
		<div class="col-md-12">
			<div class="alert alert-success" role="alert">
				<b>Well done!</b> You got {{score}}.
				The answer to the final question was {{oldWord}}.
			</div>
			<form id="submit-score-form" class="well">
			  	<div class="form-group" id="email-group">
					<label class="control-label">Email</label>
					<input class="form-control" id="email"/>
				</div>
				<br/>
				<button id="submit-score" class="btn btn-primary">Submit</button>
				<button type="button" id="start" class="btn btn-success">Go again!</button>
			</form>
		</div>
	{{/if}}
	<div class="col-md-12">
		<form class="well">
			<label>Search</label>
			<input class="form-control" id="name"/>
			<br/>
			<button id="search" class="btn btn-primary">Search</button>
		</form>
	</div>
	{{#if localScores}}
	<div class="col-md-6">
		<h3 >{{county}} Leaderboard</h3>
	</div>
	{{/if}}
	<div class="col-md-6">
		<h3>Global Leaderboards</h3>
	</div>
	{{#if localScores}}
	<div class="col-md-6">	
		<p>See where you scale against others around {{county}}!</p>
	</div>
	{{/if}}
	
	<div class="col-md-6">
		<p>See where you scale against others around the globe!</p>
	</div>
	{{#if localScores}}
	<div class="col-md-6">
	<table class="table table-bordered">
		<tr class="active">
			<td>#</td>
			<td>Name</td>
		</tr>
		{{#each localScores}}
			<tr {{#if this.glow}}class="info"{{/if}}>
    			<td>{{this.rank}}</td>
    			<td>
    				{{@key}}
    				<span class="label label-success">{{this.value}}</span>
   				</td>
    		</tr>
		{{/each}}
	</table>
</div>
{{/if}}
<div class="col-md-6">
	<table class="table table-bordered">
		<tr class="active">
			<td>#</td>
			<td>Name</td>
		</tr>
		{{#each globalScores}}
			<tr {{#if this.glow}}class="info"{{/if}}>
    			<td>{{this.rank}}</td>
    			<td>
    				{{@key}}
    				<span class="label label-success">{{this.value}}</span>
   				</td>
    		</tr>
		{{/each}}
	</table>
</div>
</div>